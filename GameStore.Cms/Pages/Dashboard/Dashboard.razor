@page "/"
@attribute [Authorize]

<div class="mb-3">
    <h3>Hoşgeldin @CurrentUser?.Name</h3>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <UserSessions />
        </div>
    </div>
</div>


@code {
    CurrentUser? CurrentUser;

    protected override async Task OnInitializedAsync()
    {
        CurrentUser = await CurrentUserService.GetCurrentUserAsync();
    }
}
