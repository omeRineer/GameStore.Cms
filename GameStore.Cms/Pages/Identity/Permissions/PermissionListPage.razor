@page "/permissions"
@attribute [Authorize(Policies.Identity)]

@inherits BaseDataPage<ODataPermission>
@inject PermissionODataService PermissionODataService
@inject PermissionService PermissionService

<div class="row">
    <div class="col-xl-3">
        <RadzenButton Icon="add" Click=@(async args => await DialogService.OpenAsync<PermissionAddPage>("Yeni Yetki",
                          null,
                          new DialogOptions{Width = "500px"} )) />

        <RadzenButton Icon="refresh" Click=@Refresh />

        @if (SelectedItem != null)
        {
            <RadzenButton Icon="edit" Click=@(async args => await DialogService.OpenAsync<PermissionUpdatePage>("Yetki Düzenle",
                          new Dictionary<string, object> { { "PermissionId", SelectedItem.Id } },
                          new DialogOptions{Width = "500px"})) />
            <RadzenButton Icon="remove" Click=@DeleteAsync />
        }


    </div>
</div>



<BaseDataGrid TItem="ODataPermission"
              IsLoading="IsLoading"
              Data="Data"
              @bind-SelectedItem="@SelectedItem"
              LoadData="LoadData"
              Count="Count"
              Columns=@(new Dictionary<string, string>
              {
                  { "Key", "Yetki" },
                  { "Name", "Title" },
                  { "CreateDate", "Oluşturulma Tarihi" },
                  { "EditDate", "Son Güncellenme Tarihi" }
              }) />

@code {
    async Task LoadData(LoadDataArgs args)
    {
        IsLoading = true;
        LastArgs = args;

        var result = await PermissionODataService.GetListAsync(new ODataRequestParams
        {
            Count = true,
            Filter = args.Filter,
            OrderBy = args.OrderBy,
            Skip = args.Skip,
            Top = args.Top
        });

        Data = result.Value.AsODataEnumerable();
        Count = result.Count;

        StateHasChanged();
        IsLoading = false;
    }

    private async void DeleteAsync()
    {
        var isConfirm = await DialogService.Confirm("Yetkiyi silmek istediğinizden emin misiniz?", "Uyarı", new ConfirmOptions { OkButtonText = "Evet", CancelButtonText = "Hayır" });
        if (isConfirm != true)
            return;

        IsLoading = true;

        var result = await PermissionService.DeleteAsync(((ODataPermission)SelectedItem).Id);
        if (!result.Success)
            NotificationService.Error(result.Message);
        else
        {
            NotificationService.Success(result.Message);
            DialogService.Close(true);
            Refresh();
        }

        IsLoading = false;
    }

    protected async override void Close(dynamic result)
    {
        if (result is bool val && val == true)
        {
            await LoadData(LastArgs);
            StateHasChanged();
        }
    }

    protected async override void Refresh()
    {
        base.Refresh();
        await LoadData(LastArgs);
        StateHasChanged();
    }
}

