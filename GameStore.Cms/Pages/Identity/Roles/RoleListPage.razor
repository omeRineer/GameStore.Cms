@page "/roles"
@attribute [Authorize(Policies.Identity)]

@inherits BaseDataPage<ODataRole>
@inject RoleODataService RoleODataService
@inject RoleService RoleService

<div class="row mb-3">
    <div class="col-xl-3">
        <RadzenButton Icon="add" Click=@(async args => await DialogService.OpenAsync<RoleAddPage>("Yeni Rol",
                          null,
                          new DialogOptions{Width = "600px" } )) />

        <RadzenButton Icon="refresh" Click=@Refresh />

        @if (SelectedItem != null)
        {
            <RadzenButton Icon="key" Click=@(async args => await DialogService.OpenAsync<RolePermissionsPage>(SelectedItem.Key,
                                        new Dictionary<string, object> { { "Role", SelectedItem } },
                                        new DialogOptions{Width = "700px"})) />
            <RadzenButton Icon="edit" Click=@(async args => await DialogService.OpenAsync<RoleUpdatePage>("Rol Düzenle",
                          new Dictionary<string, object> { { "RoleId", SelectedItem.Id } },
                          new DialogOptions{Width = "500px"})) />
            <RadzenButton Icon="remove" Click=@DeleteAsync />
        }


    </div>
</div>

<BaseDataGrid TItem="ODataRole"
              IsLoading="IsLoading"
              Data="Data"
              @bind-SelectedItem="@SelectedItem"
              LoadData="LoadData"
              Count="Count"
              Columns=@(new Dictionary<string, string>
              {
                  { "Key", "Rol" },
                  { "Name", "Title" },
                  { "CreateDate", "Oluşturulma Tarihi" },
                  { "EditDate", "Son Güncellenme Tarihi" }
              }) />

@code {
    protected override async Task LoadData(LoadDataArgs args)
    {
        IsLoading = true;
        LastArgs = args;

        var result = await RoleODataService.GetListAsync(new ODataRequestParams
        {
            Count = true,
            Filter = args.Filter,
            OrderBy = args.OrderBy,
            Skip = args.Skip,
            Top = args.Top
        });

        Data = result.Value.AsODataEnumerable();
        Count = result.Count;

        IsLoading = false;
        StateHasChanged();
    }

    private async void DeleteAsync()
    {
        var isConfirm = await DialogService.Confirm("Rolü silmek istediğinizden emin misiniz?", "Uyarı", new ConfirmOptions { OkButtonText = "Evet", CancelButtonText = "Hayır" });
        if (isConfirm != true)
            return;

        IsLoading = true;

        var result = await RoleService.DeleteAsync(((ODataRole)SelectedItem).Id);
        if (!result.Success)
            NotificationService.Error(result.Message);
        else
        {
            NotificationService.Success(result.Message);
            DialogService.Close(DialogResult.Refresh);
            Refresh();
        }

        IsLoading = false;
    }
}
