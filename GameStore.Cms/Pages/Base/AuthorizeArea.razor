

<AuthorizeView Policy="@Policy">
    <Authorized>
        @ChildContent
    </Authorized>
    <NotAuthorized>
        <AccessDenied />
    </NotAuthorized>
</AuthorizeView>

@code {
    [Parameter] public string? Policy { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }
}
